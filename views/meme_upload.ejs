<%- include('_partials/header') -%>

<div id="meme-upload-container">
  <div class="row col-centered small-12 medium-4 large-4 login-form">
    <h3>Meme Upload</h3>
    <form data-abide method="post" action="/memes/upload">
      <div class="field-group required">
        <label for="url" class="field-label">Image URL
          <div class="field">
            <input type="text" name="url" required pattern="https?:\/\/.*\.(?:png|jpg)"/>
          </div>
          <p class="help-text" id="urlHelpText">Your image URL must point to a jpg or png.</p>
        </label>
      </div>
      <div class="field-group required">
        <label for="password" class="field-label">Title
          <div class="field">
            <input type="text" name="title"/>
          </div>
        </label>
      </div>
      <div class="control-group">
        <div class="controls">
          <button type="submit" class="button">Upload</button>
        </div>
      </div>
    </form>
  </div>
</div>

<%- include('_partials/footer') -%>
