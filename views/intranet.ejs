<%- include('_partials/header') -%>

<div id="home-container" class="row">
  <div id="main-container" class="small-12 medium-9 large-9 columns">
    <div id="links-top" class="row">
      <div id="main-left" class="small-12 medium-12 large-12 columns">
        <h3>Your information</h3>

        <h5>Hello, <%= session.username %></p>
        <% if (session.roles.isAdmin) { %>
        <p>You are an admin</p>
        <% } else if (session.roles.isRecruiter) { %>
        <p>You are a recruiter at <%= session.recruiter.company_name %></p>
        <% } else if (session.roles.isCorporate) { %>
        <p>You're a member of the corporate committee.</p>
        <% } else { %>
        <p>You are not an admin.</p>
        <% } %>
      </div>
    </div>

    <% if (session.roles.isAdmin) { %>
      <div id="links-top" class="row">
        <div id="main-left" class="small-12 medium-4 large-4 columns">
            <h3>Caffeine</h3>
            <p>Caffeine vending machine placeholder text</p>
            <a href="/caffeine"><button class="button">Manage</button></a>
        </div>
        <div id="main-center" class="small-12 medium-4 large-4 columns">
          <h3>User Approval</h3>
          <p>user approval page</p><a href="intranet/userApproval">
          <button class="button">Go</button></a>
        </div>
      </div>
    <% } %>

    <% if (session.roles.isCorporate) { %>
      <div id="links-top" class="row">
        <div id="main-left" class="small-12 medium-4 large-4 columns">
          <h3>Corporate Service Manager</h3>
          <p>Maintain resumes and job posts</p>
          <a href="/sponsors/corporate_manager"><button class="button">Manage</button></a>
        </div>
        <div id="main-center" class="small-12 medium-4 large-4 columns">
          <h3>Resume Database</h3>
          <p>View and filter student resumes</p><a href="sponsors/resume_filter">
          <button class="button">View Resumes</button></a>
        </div>
        <div id="main-right" class="small-12 medium-4 large-4 columns">
          <h3>Create Job Listing</h3>
          <p>Post a job listing for students</p><a href="sponsors/new_job_post">
          <button class="button">Post Job Listing</button></a>
        </div>
      </div>
    <% } %>    
    <% if (session.roles.isRecruiter) { %>
      <div id="links-top" class="row">
        <div id="main-left" class="small-12 medium-4 large-4 columns">
          <h3>Resume Database</h3>
          <p>View and filter student resumes</p><a href="sponsors/resume_filter">
          <button class="button">View Resumes</button></a>
        </div>

        <div id="main-center" class="small-12 medium-4 large-4 columns">
          <h3>Create Job Listing</h3>
          <p>Post a job listing for students</p><a href="sponsors/new_job_post">
          <button class="button">Post Job Listing</button></a>
        </div>

        <div id="main-right" class="small-12 medium-4 large-4 columns">
          <h3>Beats by ACM</h3>
          <p>Control the Beats music system.</p><a href="https://www-s.acm.illinois.edu/beats/1104/">
          <button class="button">Go</button></a>
        </div>
      </div>
    <% } %>


    <% if (session.roles.isStudent) { %>
      <div id="links-top" class="row">
        <div id="main-left" class="small-12 medium-4 large-4 columns">
          <h3>Quote Database</h3>
          <p>Quote database placeholder text</p><a href="/quotes">
        <button class="button">View Quotes</button></a>
        </div>
        <div id="main-center" class="small-12 medium-4 large-4 columns">
          <h3>Meme Service</h3>
          <p>Placeholder text about meme service</p><a href="/memes">
          <button class="button">Me 2 thanks</button></a>
        </div>
        <div id="main-right" class="small-12 medium-4 large-4 columns">
          <h3>Beats by ACM</h3>
          <p>Control the Beats music system.</p><a href="https://www-s.acm.illinois.edu/beats/1104/">
          <button class="button">Go</button></a>
        </div>
      </div>
    <% } %>
  </div>

  <div id="events-container" class="small-12 medium-3 large-3 columns">
    <div id="events-title" class="row">
      <h2>Important Links</h2>
    </div>
    <div id="events" class="row">
      <div class="event">
        <h5>Sample Link</h5>
        <ul class="dashed">
          <li>Link</li>
        </ul>
      </div>
    </div>
    
    <% if (session.roles.isStudent) { %>
      <div id="events-title" class="row">
        <h2>Service Manager</h2>
      </div>
      <div id="events" class="row">
        <div class="event">
          <h5>Welcome</h5>
          <ul class="dashed">
            <li>test</li>
          </ul>
        </div>
      </div>
    <% } %>
    
    <div id="events-title" class="row">
      <h2>Events</h2>
    </div>
    <div id="events" class="row">
      <div class="event">
       <h5>Sample Event (from FB)</h5>
        <ul class="dashed">
          <li>Details</li>
        </ul>
      </div>
    </div>
  </div>
</div>

<%- include('_partials/footer') -%>
